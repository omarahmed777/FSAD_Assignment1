<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!--include a BorderPane here-->

<BorderPane fx:id="mainBorderPane" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="fsd.assignment.assignment1.Controller">
    <!--include a top section-->
    <top>
        <!--include a GridPane<> with a vertical and horizontal gap of 20-->
        <GridPane hgap="20" vgap="20"> <!--these correspond to the variables in the Controller-->
            <TextField fx:id="studId" text="" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="yearStudy" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <ChoiceBox fx:id="mod1Choice" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
            <ChoiceBox fx:id="mod2Choice" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            <ChoiceBox fx:id="mod3Choice" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            <Button onAction="#addStudentData" prefHeight="25.0" prefWidth="69.0" text="Add..." GridPane.columnIndex="0"
                    GridPane.rowIndex="5"/>
            <Label fx:id="validateStudent"/>
        </GridPane>
    </top>

    <left>
        <VBox>
            <Label>

            </Label>
            <ListView fx:id="studentListView"/>
            <Label>

            </Label>
        </VBox>
    </left>
    <!--This section is to show a student modules chosen when the studId is clicked-->
    <bottom>
        <VBox>
            <GridPane hgap="20">
                <!--include the Labels as well as the fx:id's, see Controller class as well as image-->
                <Label fx:id="yearStudyView"/>
                <Label fx:id="mod1View"/>
                <Label fx:id="mod2View"/>
                <Label fx:id="mod3View"/>
                <columnConstraints>
                    <ColumnConstraints/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints/>
                </rowConstraints>
            </GridPane>
        </VBox>
    </bottom>
</BorderPane>
